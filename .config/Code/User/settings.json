{
  "workbench.colorTheme": "Catppuccin Macchiato",
  "editor.fontFamily": "'FiraCode Nerd Font Mono Light','JetBrainsMono Nerd Font Regular',Menlo, Monaco,'Courier New',monospace",
  "terminal.integrated.fontFamily": "'MesloLGS Nerd Font Mono', 'FiraCode Nerd Font Mono Light','JetBrainsMono Nerd Font Regular',Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "vim.easymotion": false,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "workbench.editor.tabSizing": "shrink",
  "editor.folding": false,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "emmet.showSuggestionsAsSnippets": true,
  "rust-analyzer.check.command": "clippy",
  "emmet.includeLanguages": { "html.erb": "html", "erb": "html" },
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "files.associations": {
    "*.html.eex": "html",
    "Rakefile": "ruby"
  },
  "[go]": {
    "editor.formatOnSave": true
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "git.autofetch": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  // make it faster
  "editor.minimap.enabled": false,
  "search.searchOnType": false,
  "breadcrumbs.enabled": false,
  // /faster

  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "terminal.integrated.tabs.enabled": true,
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordWrap": "off",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[ruby]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.formatOnType": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[phoenix-heex]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "window.titleBarStyle": "custom",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "editor.formatOnSave": true,
  "terminal.integrated.env.osx": {
    "VISUAL": "code -w"
  },
  "editor.inlayHints.enabled": "off",
  "byesig.fold": false,
  "byesig.enabled": true,
  "byesig.opacity": 0.5,
  "byesig.showIcon": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.rulers": [120],
  "terminal.integrated.scrollback": 10000,
  "githubPullRequests.pullBranch": "never",
  "rust-analyzer.check.extraArgs": ["--target-dir", "/tmp/rust-analyzer-check"],
  "window.zoomLevel": 1,
  "redhat.telemetry.enabled": false,
  "scm.showActionButton": false,
  "git.openDiffOnClick": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "zls.path": "/Users/ianks/Library/Application Support/Code/User/globalStorage/augusterame.zls-vscode/zls_install/zls",
  "explorer.confirmDragAndDrop": false,
  "hexeditor.columnWidth": 16,
  "hexeditor.showDecodedText": true,
  "hexeditor.defaultEndianness": "little",
  "hexeditor.inspectorType": "aside",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/target": true,
    "**/tmp": true
  },
  "github.copilot.advanced": {
    "stops": {
      "*": ["\n\n\n"],
      "ruby": ["\ndef ", "\nclass ", "\nif ", "\n\n#"]
    }
  },
  "workbench.startupEditor": "none"
}
