#!/bin/bash

set -euo pipefail
IFS=$'\n\t'

source "$HOME/.dev-machine/utils.bash"

if [ "${SPIN:-0}" = "1" ]; then
  fancy_echo "â­ Skipping in spin mode"
  exit 1
fi

install_rust() {
  fancy_echo "ğŸ¤˜ Installing Rust..."
  curl https://sh.rustup.rs -sSf | sh -s -- -y --no-modify-path
}

if ! command -v rustup > /dev/null; then
  install_rust
fi

fancy_echo "ğŸ†• Updating Rust..."
quietly_run rustup install stable
